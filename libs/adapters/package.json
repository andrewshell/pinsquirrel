{
  "name": "@pinsquirrel/adapters",
  "version": "1.0.0",
  "description": "Infrastructure adapters for external services and libraries",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch --coverage",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "@pinsquirrel/domain": "workspace:*",
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/cheerio": "^1.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}