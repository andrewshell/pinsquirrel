{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**", ".next/**", ".react-router/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "outputs": [".react-router/types/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}