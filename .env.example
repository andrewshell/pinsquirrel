# Database Configuration
# Path to the SQLite database file
DB_FILE_NAME=file:local.db

# Authentication
# Secret key for signing session tokens - MUST be changed in production
# Generate a secure random string for production use
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Session duration in hours (default: 168 hours = 7 days)
# Shorter durations are more secure but less convenient for users
SESSION_DURATION_HOURS=168

# Registration
# Required invite code for user registration
# Set this to control who can create accounts
INVITE_CODE=your-secret-invite-code