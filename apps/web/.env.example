# Environment Configuration
# Copy this file to .env and set your values

# Database URL - used by Drizzle ORM
# For Docker deployment (internal service communication):
DATABASE_URL=postgresql://pinsquirrel:pinsquirrel@postgres:5432/pinsquirrel

# For DigitalOcean App Platform or external managed databases:
# DATABASE_URL=postgresql://username:password@hostname:25060/database?sslmode=require

# For local development (connecting to containerized DB):
# DATABASE_URL=postgresql://pinsquirrel:pinsquirrel@localhost:5432/pinsquirrel

# Application Environment
NODE_ENV=production

# Logging Configuration
# Available levels: debug, info, warn, error
# Default: debug (development), info (production)
LOG_LEVEL=info

# Session secret for cookie signing (generate a secure random string in production!)
SESSION_SECRET=your-session-secret-here

# Mailgun Configuration (for password reset emails)
# Leave empty to disable password reset functionality
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=PinSquirrel

# Signup Notification Email (optional)
# If set, sends a notification to this email address when new users sign up
# The notification includes the new user's username and email (with reply-to set to user's email)
# Leave empty to disable signup notifications
NOTIFY_EMAIL=