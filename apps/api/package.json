{
  "name": "@pinsquirrel/api",
  "type": "module",
  "main": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "exports": {
    ".": {
      "types": "./dist/app.d.ts",
      "import": "./dist/app.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "vite --clearScreen false",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@hono/zod-validator": "^0.7.0",
    "dotenv": "^17.2.0",
    "hono": "^4.8.4",
    "pino": "^9.7.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@hono/vite-dev-server": "^0.20.0",
    "@types/node": "^22.0.0",
    "typescript-eslint": "^8.35.1",
    "eslint": "^9.30.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
